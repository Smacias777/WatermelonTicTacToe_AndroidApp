<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseLevel">

    <Button
        android:id="@+id/button_hard"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:background="#FFFFFF"
        android:backgroundTint="@android:color/background_dark"
        android:onClick="hardLevel"
        android:text="Very Hard"
        android:textColor="#D528B9C6"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_easy" />

    <Button
        android:id="@+id/button_easy"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginTop="156dp"
        android:background="#FFFFFF"
        android:backgroundTint="@android:color/background_dark"
        android:onClick="easyLevel"
        android:text="Very Easy"
        android:textColor="#D528B9C6"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/watermelon_background2"
        android:layout_width="675dp"
        android:layout_height="963dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/final_watermelon_page_001" />

</androidx.constraintlayout.widget.ConstraintLayout>